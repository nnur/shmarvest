<link rel='stylesheet' href='css/application.css' >
<div class="welcome-hero">
    <%- img_tag('./images/welcome-hero.png', {class:'welcome-hero__img'}) %>
    <h2 class="welcome-hero__caption">
        Welcome to Shmarvest, <%= name %>
        <h5 class="welcome-hero__caption--light">
            Here’s how to get started:
        </h5>
    </h2>
</div>

<div class="welcome-todos">
    <a class="welcome-todos__item">
        <i class="welcome-todos__check"></i>
        <div class="welcome-todos__info">
            <h2>Create your first project</h2>
            <p>Projects get you valuable analysis about your tracked time.</p>
        </div>
    </a>
    <a class="welcome-todos__item">
        <i class="welcome-todos__check"></i>
        <div class="welcome-todos__info">
